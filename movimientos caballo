#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    int fil,col,f,c;
    cout<<"Ingresar la fila: ";
    cin>>fil;
    cout<<"Ingresar la columna: ";
    cin>>col;
    cout<<"Los destinos posibles para el caballo son: "<<endl;
    if ((fil<=8)&&(col<=8)&&(fil>=1)&&(col>=1) )
    {
        f=fil;
        c=col;
            f=f+2;
            if ((f==fil+2)&&(f<=8))
            {
                c=c+1;
                if (c<=8)
                   cout<<f<<" "<<c<<endl;
                c=c-2;
                if (c>=1)
                   cout<<f<<" "<<c<<endl;
            }
            f=f-1;
            if ((f==fil+1)&&(f<=8))
            {
                c=c+3;
                if (c<=8)
                   cout<<f<<" "<<c<<endl;
                c=c-4;
                if (c>=1)
                   cout<<f<<" "<<c<<endl;
            }
            f=f-2;
            if ((f==fil-1)&&(f>=1))
            {
                c=c+4;
                if (c<=8)
                    cout<<f<<" "<<c<<endl;
                c=c-4;
                if (c>=1)
                    cout<<f<<" "<<c<<endl;
            }
            f=f-1;
            if ((f==fil-2)&&(f>=1))
            {
                c=c+3;
                if (c<=8)
                    cout<<f<<" "<<c<<endl;
                c=c-2;
                if (c>=1)
                    cout<<f<<" "<<c<<endl;
            }
    }
    else
        cout<<"La casilla no existe";
    return 0;
}
